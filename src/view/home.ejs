<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Home</title>
</head>

<body>
    <div class="container-fluid">
        <h2>List Users</h2>
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Gender</th>
                    <th>Phone number</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < dataUsers.length;i++) { %>
                    <tr>
                        <td>
                            <%= dataUsers[i].firstName + ' ' + dataUsers[i].lastName %>
                        </td>
                        <td>
                            <%= dataUsers[i].email %>
                        </td>
                        <td>
                            <%= dataUsers[i].address %>
                        </td>
                        <td>
                            <%= (dataUsers[i].gender==1)? 'Male' : 'Female' %>
                        </td>
                        <td>
                            <%= dataUsers[i].phonenumber %>
                        </td>
                        <td>
                            <a href="./edit-user?id=<%= dataUsers[i].id %>"><button
                                    class="btn btn-primary">Update</button></a>
                            <a href="./delete-user?id=<%= dataUsers[i].id %>"><button
                                    class="btn btn-secondary">Delete</button></a>
                        </td>
                    </tr>
                    <% } %>

            </tbody>
        </table>
    </div>
</body>

</html>